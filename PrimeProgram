public class Prime{    
 public static void main(String args[]){    
  int i,z=0,flag=0;      
  int x=24;    
  z=x/2;      
  if(x==0||x==1){  
   System.out.println(x+" is not prime number");      
  }else{  
   for(i=2;i<=z;i++){      
    if(x%i==0){      
     System.out.println(x+" is not prime number");      
     flag=1;      
     break;      
    }      
   }      
   if(flag==0)  { System.out.println(x+" is prime number"); }  
  } 
}    
}   
